{
  // ==================== 服务器配置 ====================
  "server": {
    // 服务器监听地址，0.0.0.0 表示监听所有网络接口
    "host": "0.0.0.0",
    
    // 服务器端口
    "port": 8000,
    
    // 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
    "log_level": "INFO"
  },

  // ==================== 模型配置 ====================
  "model": {
    // 模型检查点路径
    // - 如果文件存在，直接加载
    // - 如果文件不存在，自动从官方 URL 下载
    // - 设置为 null 则总是下载
    "checkpoint_path": "sharp_2572gikvuh.pt",
    
    // 计算设备选择
    // - "auto": 自动选择 (优先级: cuda > mps > cpu)
    // - "cuda": 使用 NVIDIA GPU
    // - "mps": 使用 Apple Silicon GPU
    // - "cpu": 使用 CPU
    "device": "auto",
    
    // 是否使用 FP16 半精度推理
    // - true: 使用 FP16，减少约 50% 显存占用，略微降低精度
    // - false: 使用 FP32，默认精度
    // 注意: 仅在 CUDA/MPS 设备上有效，CPU 会自动使用 FP32
    "use_fp16": true,
    
    // 是否在 GPU 上执行后处理
    // - true: 在 GPU 上执行 SVD 和四元数转换（快 10-20 倍）
    // - false: 在 CPU 上执行（更稳定但慢）
    // 注意: 仅在 CUDA/MPS 设备上有效
    "use_gpu_postprocessing": true
  },

  // ==================== 存储配置 ====================
  "storage": {
    // 输出文件保存目录
    "output_dir": "output/results",
    
    // 压缩后是否保留原始 PLY 文件
    // - true: 保留 .ply 和 .sog 两个文件
    // - false: 只保留压缩后的 .sog 文件
    "keep_ply": false,
    
    // 元数据数据库路径
    "db_path": "output/sqlite/metadata.db"
  },

  // ==================== 压缩配置 ====================
  "compression": {
    // 是否启用压缩
    // - true: 转换完成后自动压缩为 .sog 格式
    // - false: 只生成 .ply 文件，不压缩
    "enabled": true,
    
    // 压缩命令 Windows 使用npx.cmd Linux 使用 npx
    "command": "npx",
    
    // 压缩命令参数模板
    // {input_file} 和 {output_file} 会被自动替换
    "args_template": [
      "splat-transform",
      "{input_file}",
      "{output_file}"
    ],
    
    // 最大并发压缩任务数
    // 根据 CPU 核心数调整，建议设置为核心数的 50%-100%
    "max_workers": 10,
    
    // 压缩超时时间（秒）
    // 如果压缩时间超过此值，任务将被终止
    "timeout": 300
  }
}
